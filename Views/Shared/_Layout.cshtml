@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Natupiura</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/natupiuralogo.jpg" >

    <style>
        /* Navbar Styles */
        .navbar {
            background-color: #ADBC9F;
        }

        .navbar-brand img {
            border-radius: 4px;
        }

        .btn-search {
            background-color: #8d0036;
            color: white;
            border: none;
            padding: 8px 12px;
        }

        .btn-search:hover {
            background-color: #73002b;
        }

        .navbar-icons a {
            font-size: 1.5rem; /* Tamaño de los íconos */
            margin-right: 15px; /* Espacio entre los íconos */
        }

        .navbar-icons a:last-child {
            margin-right: 0; /* Sin margen a la derecha para el último ícono */
        }

        /* Footer Styles */
        .footer {
            background-color: #333;
            color: white;
            padding: 20px 0;
            margin-top: auto;
        }

        .footer h4 {
            font-weight: bold;
            margin-bottom: 15px;
        }

        .footer-links {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .footer-links a {
            color: white;
            text-decoration: none;
            display: block;
            margin-bottom: 5px;
        }

        .footer-links a:hover {
            color: #ffcccc;
        }

        .newsletter input {
            width: 100%;
            max-width: 300px;
            margin-bottom: 10px;
        }

        .save-email-btn {
            background-color: #9c9c9c;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .save-email-btn:hover {
            background-color: #666666;
        }

        .pie-pagina {
            text-align: center;
            margin-top: 20px;
        }

        /* Main Layout */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            padding-top: 20px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="/Images/natupiura.jpg" alt="Natupiura" width="50" height="35">
                Natupiura
            </a>
            <form class="d-flex me-3" role="search" asp-controller="Home" asp-action="Index" method="get">
                <input class="form-control me-2" type="search" placeholder="Buscar productos..." aria-label="Search" name="cadenaBusqueda" value="@ViewData["cadenaBusqueda"]">
                <button class="btn btn-search" type="submit">Buscar</button>
            </form>
            <div class="d-flex d-lg-none navbar-icons">
                <a class="nav-link" href="#"><i class="bi bi-cart"></i></a>
                <a class="nav-link" href="#"><i class="bi bi-person"></i></a>
                <a class="nav-link" href="#"><i class="bi bi-box-arrow-in-right"></i></a>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" href="#">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Ofertas</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Hombres</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Mujeres</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Niños</a></li>
                </ul>
                <ul class="navbar-nav mb-2 mb-lg-0 d-none d-lg-flex">
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-cart"></i> Carrito</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-person"></i> Usuario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-box-arrow-in-right"></i> Login/Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-links container">
            <div>
                <h4>Contáctenos</h4>
                <p>WhatsApp: 123456789</p>
                <p>Instagram: PKSneaker</p>
                <p>Email: info@Natupiura.com</p>
            </div>
            <div>
                <h4>Centro de Usuarios</h4>
                <a href="#">Sobre nosotros</a>
                <a href="#">Condiciones de uso</a>
                <a href="#">Contáctenos</a>
            </div>
            <div>
                <h4>Ayuda</h4>
                <a href="#">Cómo hacer un pedido</a>
                <a href="#">Pago</a>
                <a href="#">Política de devoluciones</a>
                <a href="#">Rastrea tu pedido</a>
            </div>
            <div class="newsletter">
                <h4>Suscríbete al boletín</h4>
                <input type="email" placeholder="Tu correo electrónico" class="form-control">
                <button type="submit" class="save-email-btn">Suscribirse</button>
            </div>
        </div>
        <div class="pie-pagina">
            <p>© 2024 Natupiura.com | Condiciones de uso | Política de privacidad</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
