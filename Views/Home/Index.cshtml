@model  IEnumerable<WEBAPP_NATURPIURA.Models1.Producto>
@{
    ViewData["Title"] = "Gerson Gay";
    Layout = "_Layout";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .btn-carrito {
        background-color: #436850;
        color: white;
        padding: 10px 15px;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-carrito:hover {
            background-color: #004d00;
        }

    .producto {
        background-color: #ffffff; /* Fondo blanco */
        border: none; /* Sin bordes */
        border-radius: 5px;
        padding: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .producto img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .producto h3 {
            margin: 10px 0;
        }

        .producto .rating {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

            .producto .rating i {
                color: #FFD700; /* Color de las estrellas */
                margin-right: 5px;
            }

            .producto .rating span {
                margin-left: 5px;
                color: #555;
            }

        .producto:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1); /* Sombra al pasar el cursor */
        }

    .precio {
        font-size: 1.25rem;
        font-weight: bold;
        margin: 5px 0;
        color: #000; /* Color más negro */
    }

    .btn-agregar {
        margin-top: 10px;
        background-color: #436850;
        color: white;
        border: none;
        padding: 12px 20px; /* Botón más grande */
        transition: background-color 0.3s ease;
    }

        .btn-agregar:hover {
            background-color: #004d00;
        }

    .separador {
        border: none;
        border-top: 1px solid #ccc;
        margin: 20px 0;
    }
</style>


<main class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Productos</h2>
        <div class="btn-group" role="group" aria-label="Filtros">
            <button type="button" class="btn btn-outline-success">Para ti</button>
            <button type="button" class="btn btn-outline-success">A-Z</button>
            <button type="button" class="btn btn-outline-success">Listado</button>
        </div>
    </div>

    <hr class="separador">

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="producto p-3">
                    <img src="@item.ImagenUrl" alt="Imagen de @item.Nombre">
                    <h3 class="h5">@item.Nombre</h3>
                    <div class="rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <span>(10)</span>
                    </div>
                    <p class="precio">S/ @item.PrecioUnidadVenta</p>
                    <button class="btn btn-agregar">Agregar al carrito</button>
                </div>
            </div>
        }
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
